<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.julian.bluetoothandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SmartBuoy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.julian.bluetoothandroid.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.julian.bluetoothandroid.DisplaySensors" />
        <activity android:name="com.example.julian.bluetoothandroid.MainActivity" />
        <activity android:name="com.example.julian.bluetoothandroid.Obj3DView" />
    </application>

</manifest>